<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yinxt.surveyscale.mapper.AnswerMapper">

    <resultMap id="AnswerResultMap" type="com.yinxt.surveyscale.entity.Answer">
        <result column="answer_id" property="answerId"/>
        <result column="question_id" property="questionId"/>
        <result column="examination_paper_id" property="examinationPaperId"/>
        <result column="content" property="content"/>
        <result column="score" property="score"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insertAnswer" parameterType="com.yinxt.surveyscale.entity.Answer">
     insert into tb_answer(answer_id, question_id, examination_paper_id, content, create_time, update_time)
     values (#{answerId,jdbcType=VARCHAR}, #{questionId,jdbcType=VARCHAR}, #{examinationPaperId,jdbcType=VARCHAR},
     #{content,jdbcType=VARCHAR}, now(), now())
    </insert>

    <update id="updateAnswer">
        update tb_answer
        <set>
            <trim suffixOverrides=",">
                <if test="content != null">
                    content=#{content,jdbcType=VARCHAR},
                </if>
                <if test="score != null">
                    score=#{score,jdbcType=VARCHAR},
                </if>
                update_time=now()
            </trim>
        </set>
        <where>
            answer_id=#{answerId,jdbcType=VARCHAR}
        </where>
    </update>

    <select id="selectAnswer" parameterType="com.yinxt.surveyscale.entity.Answer" resultMap="AnswerResultMap">
        select * from tb_answer
        <where>
            <if test="questionId != null and questionId != ''.toString()">
                question_id = #{questionId,jdbcType=VARCHAR}
            </if>
            <if test="examinationPaperId != null and examinationPaperId != ''.toString()">
                and examination_paper_id = #{examinationPaperId,jdbcType=VARCHAR}
            </if>
        </where>
    </select>

</mapper>
